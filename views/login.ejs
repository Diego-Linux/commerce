<section id="team">
        <div class="container">
          <div class="section-header wow fadeInUp">
            <h3>LOGIN</h3>
          </div>
        </section>


<div class="container text-center wow fadeInUp" data-won-delay="0.1s">
    <form action="/login#team" method="POST">
        <input type="email" class="form-control" name="email" placeholder="E-mail">
        <% let emailError = validationErrors.find(err => err.param === 'email') %>
        <% if (emailError) { %>
            <p class="alert alert-danger">
                <%= emailError.msg %>
            </p>
        <% } %>
        <input type="password" class="form-control" name="password" placeholder="Senha">
        <% let passwordError = validationErrors.find(err => err.param === 'password') %>
        <% if (passwordError) { %>
            <p class="alert alert-danger">
                <%= passwordError.msg %>
            </p>
        <% } %>
        <input type="submit" value="Login" class="btn btn-outline-secondary">
    </form>
    <% if(authError) { %>
        <br>
        <p class="alert alert-danger">
            <%= authError%>
        </p>
    <% } %>
    <br>
    <div>
        Ainda não possui Conta ? <a href="/register#team">Criar Conta</a>
    </div>
</div>
