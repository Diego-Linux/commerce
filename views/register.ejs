<div class="container text-center wow fadeInUp" data-won-delay="0.1s">
        <section id="team">
                        <div class="container">
                          <div class="section-header wow fadeInUp">
                            <h3>criar conta</h3>
                          </div>
                    
                        </section>
                        <br>
        <form action="/register#team" method="POST" novalidate>
                <input type="text" class="form-control" name="username" placeholder="Nome de usuário">
                <% let usernameError = validationErrors.find(err => err.param === 'username') %>
                <% if (usernameError) { %>
                                <p class="alert alert-danger">
                                        <%= usernameError.msg %>
                                </p>    
                        <% } %>
                <input type="email" class="form-control" name="email" placeholder="E-mail">
                <% let emailError = validationErrors.find(err => err.param === 'email') %>
                <% if (emailError) { %>
                        <p class="alert alert-danger">
                                <%= emailError.msg %>
                        </p>
                    <% } %>
                
               

                <input type= "password" class="form-control" name="password" placeholder="Senha">
                <% let passwordError = validationErrors.find(err => err.param === 'password') %>
                <% if (passwordError) { %>
                        <p class="alert alert-danger">
                                <%= passwordError.msg %>
                        </p>
                    <% } %> 
              
                 <br>
                <input type="submit" value="Criar Conta" class="btn btn-outline-secondary">
        </form>
       <% if(authError) { %>
                <br>
                <p class="alert alert-danger">
                    <br>
                        <%= authError%>
                </p>
        <% } %>

        <% for(let error of validationErrors) { %>
            <br>
                <p class="alert alert-danger">
                        <%= error.msg %>
                </p>
        <% } %>
        <br>
        <div>
                Já possui conta ? <a href="/login#team">Entrar</a>
        </div>
</div>
