<section id="team">
        <div class="container">
          <div class="section-header wow fadeInUp">
            <h3>PRODUTOS</h3>
          </div>
    
        </section>
<section id="produc">
<div class="container text-center wow fadeInUp" data-won-delay="0.1s">

    <form class="filter" action="/products#produc" method="GET">
        <div class="row">
            <div class="col col-md-10">
                <select name="category" class="form-control">
                    <option value="all">Todas as categorias</option>
                    <option value="bombom">Bombom</option>
                    <option value="barra">Barra</option>
                    <option value="ovo">Ovo de Páscoa</option>
                    <option value="trufa">Trufa</option>
                    <option value="brownie">Brownie</option>
                </select>
            </div>
            <div class="col col-md-2">
                <input type="submit" class="btn btn-dark" value="Pesquisar">
            </div>
        </div>
    </form>

    <% if(validationError) { %>
        <p class="alert alert-danger">
            <%= validationError.msg%>
        </p>
    <% } %>

    <% if(products.length === 0) { %>
    <div class="alert alert-danger">
        Não há produtos nesta categoria
    </div>
    <% } else { %>
    <div class="row">
        <% for(let product of products) { %>
            <div class="col col-12 col-md-6 col-lg-4 col-xl-4"><br><br>
                <div class="" style="width: 100%;">
                    <img src="/<%= product.image%>" class="card-img-top" style="height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/product/<%= product._id%>"><%= product.name%></a>
                                <p>Preço: R$ <%= product.price%></p>
                        </h5>
                        <form action="/cart" method="POST" class="add-to-cart-form">
                            <input type="number" name="amount" class="form-control">
                            <input type="hidden" name="name" value="<%= product.name%>">
                            <input type="hidden" name="price" value="<%= product.price%>">
                            <input type="hidden" name="productId" value="<%= product._id%>">
                            <input type="hidden" name="redirectTo" value="/prod">
                            <input type="submit" value="Adicionar ao carrinho" class="btn-get-started scrollto">
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <% } %>
</div>
</section>
</section>

    

