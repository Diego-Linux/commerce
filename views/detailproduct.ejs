                </div>
              </div>
    
            <a class="carousel-control-prev" href="#introCarousel" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon ion-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
    
            <a class="carousel-control-next" href="#introCarousel" role="button" data-slide="next">
              <span class="carousel-control-next-icon ion-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
    
          </div>
        </div>
      </section><!-- #intro -->

<section id="prodetail">
        <section id="team">
                <div class="container">
                  <div class="section-header wow fadeInUp">
                    <h3>DETALHES DO PRODUTO</h3>
                  </div>
<div class="container">
    <% if(!product) { %>
    <div class="alert alert-danger">
        there is no product matches this id
    </div>
    <% } else {%>
        <br><br><br>
    <div class="row">
        <div class="col col-12 col-md-6">
            <div class="" style="width: 100%;">
                <img src="/<%= product.image%>" class="card-img-top" style="max-height: 400px">
                <div class="card-body">
                    <form action="/cart" method="POST" class="add-to-cart-form">
                        <input type="hidden" name="name" value="<%= product.name%>">
                        <input type="hidden" name="price" value="<%= product.price%>">
                        <input type="hidden" name="productId" value="<%= product._id%>">
                        <input type="number" name="amount" class="form-control">
                        <input type="submit" value="Adicionar ao carrinho" class="btn-get-started scrollto">
                    </form>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6 product-detail">
            <h3><%= product.name%></h3>
            <h5>Preço: R$ <%= product.price%></h5>
            <p><%= product.description%></p>
        </div>
    </div>
    <% } %>
</div>
</section>

<%- include('partials/footer')%>